            justify-content: center; /* Yatay ortalama */
            align-items: center; /* Dikey ortalama */
          }


          .carousel-item:hover .carousel-title,
          .carousel-item:hover .carousel-subtitle {
          opacity: 1;
          }

          /* Overlay */
          .overlay {
          position: fixed;
          top: 0;
          left: 0;
          width: 100vw;
          height: 100vh;
          background-color: rgba(0, 0, 0, 0.6);
          z-index: 999;
          display: none;
          }

          .carousel-prev, .carousel-next {
