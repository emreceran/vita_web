<odoo>
    <template id="product_faq_template" name="Product FAQ Template">
        <style>
            .faq-section {
                background: linear-gradient(to right, #001f3f , #0074d9);
                color: #fff;
                padding: 2rem;
                border-radius: 10px;
                margin-bottom: 20px;
            }

            .faq-title {
<!--                font-size: 1.5rem;-->
                font-weight: bold;
                text-align: center;
                margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid white;
            }

            .faq-item {
                margin-bottom: 20px;
                padding: 15px;
<!--                background-color: #0074d9;-->
                border-radius: 8px;
            }

            .faq-question {
                font-size: 18px;
                font-weight: bold;
                margin-bottom: 10px;
                color: #fff;
                background: noe;
            text-align: left;
            }

            .faq-answer {
                font-size: 12px;
                color: black;
             background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            text-align: left;
            }
        </style>

        <t t-if="product.faq_question1 or product.faq_question2 or product.faq_question3">
            <div class="faq-section">
                <h4 class="faq-title">Sıkça Sorulan Sorular</h4>

                <!-- Soru ve Cevap 1 -->
                <t t-if="product.faq_question1">
                    <div class="faq-item">
                        <div class="faq-question" t-field="product.faq_question1"></div>
                        <div class="faq-answer" t-field="product.faq_answer1"></div>
                    </div>
                </t>

                <!-- Soru ve Cevap 2 -->
                <t t-if="product.faq_question2">
                    <div class="faq-item">
                        <div class="faq-question" t-field="product.faq_question2"></div>
                        <div class="faq-answer" t-field="product.faq_answer2"></div>
                    </div>
                </t>

                <!-- Soru ve Cevap 3 -->
                <t t-if="product.faq_question3">
                    <div class="faq-item">
                        <div class="faq-question" t-field="product.faq_question3"></div>
                        <div class="faq-answer" t-field="product.faq_answer3"></div>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
