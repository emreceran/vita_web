<odoo>
    <template id="red_cards" name=" Red Cards">
        <style>
            .custom-cards-container {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 20px;
            padding: 0;
            background: linear-gradient(to right, #001f3f , #0074d9   );
            border-radius: 15px !important;
            }

            .custom-cards {
            height: auto;; /* Kart yüksekliği */
            flex: 1;
            transition: all 0.2s ease;
            cursor: pointer;
            display: flex;
            align-items: center;
            padding: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            margin: 0;
            }


            .custom-card1{
                border-radius: 15px 0 0 15px;
            }
            .custom-card1:hover{
                border-radius: 0;
            }

            .custom-card3{
                background-color: #636466 !important;
                border-radius: 0 15px 15px 0;
            }
            .custom-card3:hover{
                border-radius: 0;
            }


            .custom-cards img {
            max-height: 40px;
            height: auto;
            margin-right: 10px;
            }

            .custom-cards .cards-content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            }

            .custom-cards h5 {
            font-size: 1rem;
            margin-top: 5px;
            font-weight: bold;
            color: #fff;
            text-align: left;
            }

            .custom-cards p {
            max-width: 200px;
            word-wrap: break-word;
            text-align: left;
            font-size: 0.8rem;
            margin: 5px 0 0 0;
            color: #f1f1f1;
            }

            .custom-cards:hover {
            box-shadow: 0px 6px 6px 2px rgba(61, 61, 61, 0.5);
            transform: scale(1.05);
            z-index: 10;
            background: #001f3f;
            }

            @media (max-width: 992px){
                .custom-card1{
                    border-radius: 15px 15px 0 0;
                }
                
                .custom-card3{
                    border-radius: 0 0 15px 15px;
                }
               
                .custom-cards {
                    flex: 0 1 auto;
                    width: 100% !important;
                    justify-content: center;
                }
            }

        </style>

        <div class="red_cards mobillisil">
            <div class="custom-cards-container">
                <!-- Mail At Kartı -->
                <a href="mailto:vita@vitamuhendislik.com" class="custom-cards custom-card1">
                    <img src="https://img.icons8.com/fluency/48/000000/email.png" loading="lazy"/>
                    <div class="cards-content">
                        <h5>Mail At</h5>
                        <p class="line1">Bize e-posta göndererek hızlıca ulaşabilirsiniz.</p>
                    </div>
                </a>

                <!-- İletişim Formu Kartı -->
                <a href="/contactus" class="custom-cards custom-card2">
                    <img src="https://img.icons8.com/fluency/48/000000/contact-card.png" loading="lazy"/>
                    <div class="cards-content">
                        <h5>İletişim Formu</h5>
                        <p class="line2">İletişim formumuzu doldurarak bize mesaj bırakın.</p>
                    </div>
                </a>

                <!-- WhatsApp Kartı -->
                <a href="https://wa.me/+905325219786" target="_blank" class="custom-cards custom-card3 ">
                    <img src="https://img.icons8.com/fluency/48/000000/whatsapp.png" loading="lazy"/>
                    <div class="cards-content">
                        <h5>WhatsApp</h5>
                        <p class="line3">WhatsApp üzerinden bizimle anında iletişime geçin.</p>
                    </div>
                </a>
            </div>
        </div>

    </template>
</odoo>
