<odoo>
    <template id="product_categories" name="Product Categories">

        <style>
            /* Tüm Hizmetler başlığı */
            .hizmetler-baslik {
            font-size: 24px;
            font-weight: bold;
            color: white;
            background-color: #001f3f;
            padding: 12px;
            margin-bottom: 40px;
            text-align: center;
            border-radius: 10px;
            width: 100%;
            margin: 0 auto;
            }

            /* Kategori kutucukları */
            .category-container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 30px;
            margin-top: 40px;
            width: 100%; /* Tüm Hizmetler başlığıyla aynı genişlik */
            margin: 0 auto; /* Ortalamak için */
            }

            .category-kutusu {
            display: inline-block;
            background-color: #ddd;
            padding: 15px 25px;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
            color: #333;
            border-radius: 10px;
            transition: background-color 0.3s ease;
            }

            /* Hover efektleri */
            /* İlk üç kutucuk kırmızı olur */
            .category-container a:nth-child(1):hover,
            .category-container a:nth-child(2):hover,
            .category-container a:nth-child(3):hover {
            background-color: hsl(0, 71%, 43%);
            color: white;
            }

            /* Dördüncü ve beşinci kutucuk sarı olur */
            .category-container a:nth-child(4):hover,
            .category-container a:nth-child(5):hover {
            background-color: hsl(45, 100%, 50%);
            color: white;
            }

            /* Altıncı kutucuk gri olur */
            .category-container a:nth-child(6):hover {
            background-color: hsl(0, 0%, 43%);
            color: white;
            }

            /* Kart listeleme ve hizmet kutuları */
            .custom-card-list {
            list-style: none;
            padding: 0;
            }

            .custom-card-list li {
            scroll-margin-top: 100px;
            position: relative;
            max-width: 100%;
            margin: 2rem auto;
            padding: 2rem 1rem 1rem;
            box-shadow: 0.1rem 0.1rem 1.5rem rgba(0, 0, 0, 0.3);
            border-radius: 0.25rem;
            overflow: hidden;
            background-color: white;
            }

            /* Kart renkleri */
            /* 1, 2 ve 3. kartlar kırmızı tonlarda */
            .custom-card-list li:nth-child(1)::before,
            .custom-card-list li:nth-child(2)::before,
            .custom-card-list li:nth-child(3)::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 10px; /* Bar yüksekliği */
            background: linear-gradient(to right, #001f3f , #0074d9);
            z-index: 1;
            }

            /* 4 ve 5. kartlar sarı tonlarda */
            .custom-card-list li:nth-child(4)::before,
            .custom-card-list li:nth-child(5)::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 10px; /* Bar yüksekliği */
            background: linear-gradient(to right, hsl(45, 100%, 50%), hsl(45, 100%, 88%));
            z-index: 1;
            }

            /* 6. kart gri tonlarında */
            .custom-card-list li:nth-child(6)::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 10px; /* Bar yüksekliği */
            background: linear-gradient(to right, hsl(0, 0%, 43%), hsl(0, 0%, 88%));
            z-index: 1;
            }

            /* Başlıklar sola hizalandı ve bold yapıldı */
            .custom-card-list h3 {
            text-align: left;  /* Sola hizalama */
            font-weight: bold; /* Kalın yazı */
            margin: 0 0 1rem;
            color: rgb(70 70 70);
            font-size: 1.5rem;
            position: relative; /* Barın üstünde görünmesi için */
            z-index: 2; /* Başlığın barın üzerinde görünmesi için */
            }

            /* Hizmetler grid yapısı - Tek satırda 5 sütun */
            .custom-hizmetler-container {
            display: grid;
            grid-template-columns: repeat(5, 1fr); /* 5 sütun */
            gap: 10px;
            padding: 20px;
            max-width: 100%;
            margin: 0 auto;
            }

            .custom-hizmet-kutusu {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease;
            height: 25vh;

            }

            .custom-hizmet-kutusu:hover {
            transform: scale(1.05);
            }

            .custom-hizmet-kutusu img {
            width: 100%;
            height: 100px;
            object-fit: cover;
            }

            .custom-hizmet-baslik {
            font-size: 16px;
            font-weight: bold;
            margin: 10px;
            color: #333;
            height: 40px;
            text-align:left !important;
            display: -webkit-box;
            -webkit-line-clamp: 2; /* Satır sayısını belirler */
            -webkit-box-orient: vertical;
            overflow: hidden;

            }

            .custom-hizmet-aciklama {
            font-size: 10px;
            margin: 0 10px 10px;
            color: #666;
            }

            /* Responsive Ayarlar */
            @media (max-width: 1024px) {
            .custom-hizmetler-container {
            grid-template-columns: repeat(3, 1fr); /* Tabletler için 3 sütun */
            }
            }

            @media (max-width: 768px) {
            .custom-hizmetler-container {
            grid-template-columns: repeat(2, 1fr); /* Küçük ekranlar için 2 sütun */
            }
            }

            @media (max-width: 480px) {
            .custom-hizmetler-container {
            grid-template-columns: 1fr; /* Mobil ekranlar için 1 sütun */
            }
            }

            @media (min-width: 40em) {
            .custom-card-list li {
            margin: 3rem auto;
            padding: 3rem 2rem 2rem;
            }

            .custom-card-list h3 {
            font-size: 1.75rem;
            margin: 0 0 2rem;
            }

            .custom-card-list h3::before {
            margin-right: 1.5rem;
            }
            }




        </style>

        <div class="hizmetler-baslik">Tüm Hizmetlerimiz</div>

        <ol class="custom-card-list" style="--length: 6" role="list">
            <li id="test-olcum" style="">
                <div class="custom-hizmetler-container">

                    <t t-set="product_model" t-value="env['product.template']"/>
                    <t t-set="random_products" t-value="product_model.get_random_products( product.id, 15)"/>
                    <t t-foreach="random_products" t-as="related_product">
                        <!-- Card 1 -->
                        <div class="col">

                            <a href="related_product.website_url" class="custom-hizmet-link">
                                <div class="custom-hizmet-kutusu">
                                    <img t-att-src="website.image_url(related_product, 'img_2')" class="card-img-top w-100" alt="Gezici Köprülü Vinç"/>
                                    <div class="custom-hizmet-baslik text-left">
                                        <t t-esc="related_product.name" />
                                    </div>

                                    <!--                                    <div class="custom-hizmet-aciklama"><t t-esc="related_product.description_sale" />.</div>-->

                                </div>
                            </a>
                        </div>
                    </t>




                </div>
            </li>

        </ol>


    </template>
</odoo>




